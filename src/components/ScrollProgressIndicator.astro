---
const { anchor } = Astro.props;
---

<a href={anchor} class="back-to-top">
  <!-- aria-hidden="true" to hide the icon from screen readers -->
  <span class="hidden">Back to top</span>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    ><!-- Icon from Tabler Icons by PaweÅ‚ Kuna - https://github.com/tabler/tabler-icons/blob/master/LICENSE -->
    <path
      fill="none"
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 5v14m4-4l-4 4m-4-4l4 4"></path></svg
  >
</a>
<style>
  @property --angle {
    syntax: "<angle>";
    inherits: true;
    initial-value: -90deg;
  }
  @property --progress {
    syntax: "<length-percentage>";
    inherits: false;
    initial-value: 0%;
  }

  @keyframes progress {
    0% {
      --progress: 0%;
    }

    2% {
      --angle: -90deg;
    }

    10% {
      --angle: -180deg;
    }

    100% {
      --angle: -180deg;
      --progress: 100%;
    }
  }

  .back-to-top {
    background-image: linear-gradient(
      var(--clr-accent) 0% var(--progress),
      var(--yang) var(--progress) 100%
    );
    animation: progress linear;
    animation-timeline: scroll();
    /* border: 1px solid var(--yin); */
    padding: var(--gap-xs);
    /* position: fixed;
    inset: auto 2rem 2rem auto; */
    z-index: 2;

    &:any-link {
      /* Instead of the link color, use the text color */
      color: var(--yin);
      text-decoration: none;

      &:hover {
        opacity: 0.85;
      }
    }
  }
  svg {
    transform: rotate(var(--angle));
    transition: transform 0.25s ease;

    @supports not (animation-timeline: scroll()) {
      --angle: -180deg;
      background: var(--clr-accent);
      /* transform: rotate(-180deg); */
    }
  }
</style>
