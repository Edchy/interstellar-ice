---
import { navItems } from "../utils/data";
---

<nav role="navigation" aria-label="main-navigation">
  <menu class="nav-list-sorry-not-sorry">
    {
      navItems.map((item) => (
        <li class="quick-flip">
          <a href={item.path}>{item.name}</a>
        </li>
      ))
    }
  </menu>
</nav>
<style>
  nav {
    display: none;
    font-family: var(--font-heading);
    font-family: var(--font-brand);

    @media (width > 1200px) {
      transform: rotate(-90deg);
    }
    @media (width > 768px) {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }
  menu {
    display: flex;
    flex-wrap: wrap;
    width: max-content;
    /* column-gap: var(--gap-s); */
    gap: clamp(var(--gap-m), 1.5vw, var(--gap-l));
    gap: var(--gap-xl);
  }

  a:any-link {
    padding: 1rem 0;
    text-decoration: none;

    color: var(--white);
    text-shadow: 1px 0 0 var(--black);

    font-size: 1.125rem;

    @media (width > 1200px) {
      color: var(--yin);
      text-shadow: none;
    }
  }
</style>
