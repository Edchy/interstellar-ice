---
import { formatDate, string_to_slug } from "@/utils/utils.js";
import { calculateReadingTime } from "@/utils/readingtime.js";

const { post, i } = Astro.props;
const { title, subtitle, pubDate, description } = post.data;

const readingTime = calculateReadingTime(post.body);
const minutesReadString = readingTime.text;
const minutesRead = parseFloat(minutesReadString) - 1;
---

<li class="latest-post-card">
  {i === 0 ? <span class="badge">fresh from the oven</span> : null}
  <div class="card-inner">
    <div class="title-area">
      <h3 transition:name={title}>{title}</h3>
      <!-- Fixed height subtitle container -->
      <div class="subtitle-container">
        {subtitle ? <h4>{subtitle}</h4> : <div class="empty-subtitle" />}
      </div>
    </div>
    <div class="container">
      <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
      <span class="read-time">{minutesRead} min read</span>
    </div>
    <p>{description}</p>
    <a href={`/blog/${post.id}`} class="read-more">Read More â†’</a>
  </div>
</li>

<style>
  .badge {
    position: absolute;
    top: -1rem;
    right: 0.25rem;
    background-color: var(--blu2);
    color: var(--white);
    /* padding: 0.5rem 1rem; */
    padding-inline: 0.5rem;
    padding-block: min(0.5rem, 1.5vw);
    border-radius: var(--radius);
    font-size: clamp(0.5rem, 1vw + 0.25rem, 0.75rem);
    font-weight: bold;

    /* text-transform: uppercase; */
    box-shadow: var(--shadow);
  }
  .latest-post-card {
    background-color: var(--yang);
    border-radius: var(--radius);
    box-shadow: 0 4px 12px oklch(from var(--yin) l c h / 0.1);
    overflow-x: clip;
    width: 100%;

    /* max-width: 400px; */
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
    position: relative;
    border: 1px solid oklch(from var(--yin) l c h / 0.1);
    display: grid;
    grid-template-rows: subgrid;
    /* grid-row: span 1; */

    &:first-of-type {
      grid-column: 1 / -1;
      background-color: oklch(from var(--blu2) l c h / 0.3);
    }
    &:nth-of-type(2) {
      /* grid-row: span 2; */
      background-color: oklch(from var(--yin) l c h / 0.2);
    }
    &:nth-of-type(3) {
      /* grid-row: span 2; */
      background-color: oklch(from var(--clr-accent) l c h / 0.2);
    }
  }

  /* .latest-post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px oklch(from var(--yin) l c h / 0.15);
  } */

  .card-inner {
    padding: 1.5rem;
    display: grid;
    /* Simplify grid rows to have more precise control */
    grid-template-rows: 1fr auto 1fr auto;
    grid-row: span 1;
  }

  .title-area {
    /* Fixed height for title + subtitle together */
    min-height: 6rem;
    display: flex;
    flex-direction: column;
  }

  .subtitle-container {
    /* Fixed height for subtitle area */
    height: 3rem;
    display: flex;
    align-items: flex-start;
  }

  h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    color: var(--yin);
    line-height: 1.2;
  }

  h4,
  .empty-subtitle {
    font-size: 1rem;
    font-style: italic;
    margin: 0;
    color: var(--yin);
    opacity: 0.5;
    line-height: 1.4;
    text-wrap: balance;
    /* Have subtitle truncate if it's too long */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    max-width: 100%;
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* Fixed height container for date/time info */
    height: 1.5rem;
    margin-bottom: 1rem;
  }

  time,
  .read-time {
    font-size: 0.75rem;
    color: var(--yin);
    opacity: 0.7;
  }

  p {
    margin-bottom: 1.5rem;
    font-size: 0.9rem;
    line-height: 1.5;
    color: var(--yin);
  }

  .read-more {
    display: inline-block;
    /* color: var(--clr-accent); */
    color: currentColor;
    font-weight: bold;
    text-decoration: none;
    font-size: 0.9rem;
    transition: transform 0.2s ease;
    margin-top: auto;
  }

  .read-more:hover {
    transform: translateX(5px);
  }
</style>
