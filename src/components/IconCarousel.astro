---
import { Icon } from "astro-icon/components";
import { devicon, devPlain, catppuccin } from "../utils/data.js";
---

<ul class="logos">
  {
    catppuccin.names.map((name) => (
      <li class="tech-icon" title={name}>
        <Icon
          class="tech-icon"
          name={`${catppuccin.icon}:${name}`}
          size="2.5rem"
        />
      </li>
    ))
  }
</ul>

<style>
  ul {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
</style>
