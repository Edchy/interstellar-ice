import Nik from "@/assets/nik.gif";
import MeshGradient from "@/assets/mesh-gradient.svg";
import { Image } from "astro:assets";
import Card from "../components/Card.astro";
import Cicada from "../components/Cicada.astro";
import { Code } from "astro:components";
import Overlap from "../components/Overlap.astro";
import WordMorph from "../components/WordMorph.astro";
---

<PageLayout>
  <main class="co">
    <!-- <div class="epic-intro">
      <h1>Hello... I forge worlds in code</h1>
      <p>Born from nothing, they rise. I watch, I guide, I let them go.</p>
    </div> -->
    <WordMorph texts={["hello", "there"]} />
  </main>
  <section>
    <div class="inner">
      Lorem ipsum dolor sit, amet consectetur adipisicing elit. Itaque soluta
      necessitatibus veniam assumenda esse quam beatae natus saepe similique
      modi.
    </div>
  </section>
</PageLayout>

<style>
  main {
    padding-block-start: 2rem;
    min-height: 100vh;
    /* border: 1px solid red; */
    background-image: url("no-motion-nik.webp");
    background-position: center;

    background-color: var(--blueish);
    background-blend-mode: color-dodge;
    /* background-blend-mode: color-burn; */
    background-repeat: no-repeat;
    background-size: cover;

    @media (prefers-reduced-motion: no-preference) {
      background-image: url("nik.gif");
    }
  }

  .epic-intro {
    /* color: var(--nice-blueish-hue); */
    h1 {
      font-family: "Revenge", sans-serif;
      font-size: 5rem;
      line-height: 1;
      /* transform: translateX(-30px); */
      text-wrap: balance;
    }
    p {
      font-family: "Revenge";
      font-size: 2rem;
      max-width: 15ch;
    }
  }

  section {
    height: 50vh;
    width: 100%;
    background-color: var(--blueish);
    background-color: red;

    position: absolute;
    z-index: 2;
    left: 0;

    .inner {
      /* background-color: red; */
      width: min(100%, 904px);
      margin-inline: auto;
    }
  }
</style>

