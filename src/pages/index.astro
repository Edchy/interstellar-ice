---
import PageLayout from "../layouts/PageLayout.astro";
import Nik from "@/assets/nik.gif";
import MeshGradient from "@/assets/mesh-gradient.svg";
import { Image } from "astro:assets";
import Card from "../components/Card.astro";
import Cicada from "../components/Cicada.astro";
import { Code } from "astro:components";
import Overlap from "../components/Overlap.astro";
import WordMorph from "../components/WordMorph.astro";
---

<PageLayout>
  <main class="co">
    <WordMorph />

    <p>
      I'm a web designer & developer. I build websites, apps, interfaces, and
      make digital things work (most of the time).
    </p>
  </main>
  <section>
    <div class="inner">
      <h2>Rothko Chillida Ström</h2>
    </div>
    <!-- <Overlap /> -->
  </section>
</PageLayout>

<style>
  p {
    /* letter-spacing: 2px; */
    font-family: var(--font-heading);
    font-size: var(--font-size-fluid-0);
    max-width: 31ch;
    align-self: flex-end;
    text-wrap: pretty;
    color: var(--white);
  }
  main {
    /* padding-block-start: 2rem; */
    min-height: 90vh;
    background-image: url("no-motion-nik.webp");
    background-position: center;
    padding: 1rem;
    background-color: var(--blueish);
    background-blend-mode: color-dodge;
    /* background-blend-mode: color-burn; */
    background-repeat: no-repeat;
    background-size: cover;

    display: flex;
    justify-content: space-between;
    flex-direction: column;

    @media (width > 1200px) {
      min-height: 100vh;
    }

    @media (prefers-reduced-motion: no-preference) {
      background-image: url("nik.gif");
    }
  }

  section {
    height: 50vh;
    width: 100%;
    background-color: var(--blueish);
    background-color: red;
    /* -webkit-mask: var(--mask-edge-zig-zag-top); */

    position: absolute;
    z-index: 2;
    left: 0;

    .inner {
      /* background-color: red; */
      width: clamp(901px, 78vw, 1100px);
      width: min(100%, 1100px);
      background-color: aliceblue;
      margin-inline: auto;
    }

    h2 {
      font-size: var(--text-huge);
    }
  }
</style>

