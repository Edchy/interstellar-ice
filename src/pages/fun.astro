---
import PageLayout from "@/layouts/PageLayout.astro";
---

<PageLayout title="Fun" description="Just random fun stuff" showAside={true}>
  <main>
    <h1 transition:name="h1" transition:animate="slide">fun</h1>
    <!-- <a href="https://www.youtube.com/watch?v=jVhlJNJopOQ&t=31s">SNL</a>

    <a href="https:/www.neal.fun">neal.fun</a>

    <a href="https://heydonworks.com/">heydonworks</a> -->
    <div class="video-container">
      <iframe
        width="560"
        height="315"
        src="https://www.youtube.com/embed/jVhlJNJopOQ"
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen
      >
      </iframe>
    </div>
  </main>
</PageLayout>

<style>
  h1 {
    --text-huge: clamp(5rem, 1rem + 15vw, 15rem);
    font-size: var(--text-huge);
    font-family: var(--font-heading);
    margin-block-end: 2rem;
  }
  main {
    padding-inline: 1rem;
    min-height: 100vh;
  }
  @media (width < 1200px) {
    main {
      padding-top: var(--header-offset);
    }
  }
  .video-container {
    position: relative;
    aspect-ratio: 16 / 9;

    margin-bottom: 2rem;
    overflow: hidden;
  }

  .video-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: var(--radius);
  }
</style>
