---
import "../css/main.css";
import Nav from "../components/Nav.astro";
import ScrollProgressIndicator from "../components/ScrollProgressIndicator.astro";
import Socials from "../components/Socials.astro";
import Logo from "../components/Logo.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import Burger from "../components/Burger.astro";
import BigRedButton2 from "../components/BigRedButton2.astro";
import Head from "./Head.astro";
import Footer from "./Footer.astro";

const { title, description, showAside } = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head {title} {description} />
  <body id="page-top">
    <div class="grid-wrapper">
      <header>
        <div class="inner">
          <Logo />
          <Nav />
          <div class="flex">
            <ThemeToggle />
            <Burger />
          </div>
          <!-- <p>x</p> -->
        </div>
      </header>
      <div>
        <slot />
      </div>
      <aside>
        <div class="inner">
            {showAside && (
        <!-- <BigRedButton2 /> -->
        <p>아니 사진관</p>
        <!-- <p>いいえ。</p> -->
        <nav class="socials">
          <Socials />
        </nav>
      )}
        <ScrollProgressIndicator anchor="#page-top" />
          </div>
        </aside>
    </div>
    <!-- <Footer /> -->
  </body>
</html>

<style>
  header {
    /* position: fixed;
    width: 100%;
    top: 0;
    z-index: 9999 !important;
    border: 1px solid red;
    background-color: red; */
  }
  .grid-wrapper {
    --width: 150px;
    --left-col-width: var(--width);
    --right-col-width: var(--width);
  }

  .inner {
    padding-block: 1rem;
    padding-inline-start: 1rem;
    padding-inline-end: .5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 3;
  }

  aside {
    display: none;
  }

  @media (width > 1200px) {
    .grid-wrapper {
      display: grid;
      max-width: 1400px;
      margin-inline: auto;
      grid-template-columns: var(--left-col-width) 1fr var(--right-col-width);
    }
    .inner {
      width: var(--width);
      min-height: 100vb;
      position: fixed;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      align-items: center;
    }
    header {
      height: 100vb;
    }

    aside {
      display: block;
      .inner {
        justify-content: center;
      }
      .socials {
        margin: auto;
      }
    }
  }
</style>
