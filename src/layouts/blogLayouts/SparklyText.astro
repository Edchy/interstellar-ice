---
interface Props {
  color?: string;
  num?: number;
}
const { color = "rainbow", num = 3 } = Astro.props as Props;
const textColor =
  "light-dark(oklch(0.399 1.3034 241.41), oklch(0.8699 0.2034 61.41))";
---

<sparkly-text
  style=`--sparkly-text-color: ${color}; color: ${textColor}`
  number-of-sparkles={num}><slot /></sparkly-text
>
