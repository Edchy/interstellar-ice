---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

// Define more specific props type
interface Props {
  src: ImageMetadata;
  alt?: string;
  width?: number;
  height?: number;
  class?: string;
  caption?: string;
  cc?: string;
}

const { src, alt = "", caption, cc, ...rest } = Astro.props;
---

<figure>
  <Image {src} {alt} {...rest} />
  <figcaption>
    {caption}
    {cc && <a href={cc}>Source</a>}
  </figcaption>
</figure>

<style>
  img {
    object-fit: contain;
    width: 100%;
    max-height: 800px;
    /* aspect-ratio: 1; */
    height: auto;
    border-radius: var(--radius);
    /* @media (width < 500px) {
      height: auto;
    } */
  }
  figure {
    margin-block: 4rem;
    border-radius: var(--radius);
    /* display: flex; */
  }
  figcaption {
    font-size: 0.75rem;
    color: var(--yin);
    margin-top: 0.5rem;
    font-style: italic;
    padding-left: 0.25rem;
    max-width: 65ch;
    margin-inline: auto;
    /* text-align: center; */
    /* max-width: 45ch; */
  }
</style>
